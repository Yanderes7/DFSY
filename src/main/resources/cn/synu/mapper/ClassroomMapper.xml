<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.synu.mapper.ClassroomMapper" >
  <resultMap id="BaseResultMap" type="cn.synu.domain.Classroom" >
    <id column="id" property="id" />
    <result column="cr_name" property="cr_name" />
    <result column="flag" property="flag" />
  </resultMap>
  <delete id="deleteByPrimaryKey" >
    delete from classroom
    where id = #{id}
  </delete>
  <insert id="insert" useGeneratedKeys="true" keyProperty="id" >
    insert into classroom (cr_name, flag)
    values (#{cr_name}, #{flag})
  </insert>
  <update id="updateByPrimaryKey" >
    update classroom
    set cr_name = #{cr_name},
      flag = #{flag}
    where id = #{id}
  </update>
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" >
    select id, cr_name, flag
    from classroom
    where id = #{id}
  </select>
  <select id="selectAll" resultMap="BaseResultMap" >
    select id, cr_name, flag
    from classroom
  </select>

  <select id="selectCr_idByC_id" resultType="java.lang.Long">
    select cr_id
    from c_t_cr
    where c_id = #{id}
  </select>
  <select id="selectByPrimaryKeyForeach" resultType="cn.synu.domain.Classroom">
    select id, cr_name, flag
    from classroom
    <where>
      <foreach collection="cr_ids" item="id" open="id in (" separator="," close=")">
        #{id}
      </foreach>
    </where>

  </select>
  <select id="selectByNullClassRoom" resultType="cn.synu.domain.Classroom">
    select id, cr_name, flag
    from classroom
    where flag = #{b}
  </select>

</mapper>